          }
        },
        {
          "name": "Get Banner by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:3201/banners/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3201",
              "path": ["banners", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin APIs",
      "item": [
        {
          "name": "Get Admin Banner List",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:3201/banners/admin/list?page=1&limit=20",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3201",
              "path": ["banners", "admin", "list"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "position",
                  "value": "1",
                  "disabled": true
                },
                {
                  "key": "is_active",
                  "value": "true",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Create Banner",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "image",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "name",
                  "value": "Black Friday Sale Banner",
                  "type": "text"
                },
                {
                  "key": "link_url",
                  "value": "/products/flash-sale",
                  "type": "text"
                },
                {
                  "key": "link_target",
                  "value": "_self",
                  "type": "text"
                },
                {
                  "key": "position",
                  "value": "1",
                  "type": "text"
                },
                {
                  "key": "sort_order",
                  "value": "0",
                  "type": "text"
                },
                {
                  "key": "is_active",
                  "value": "true",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "http://localhost:3201/banners/admin",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3201",
              "path": ["banners", "admin"]
            }
          }
        },
        {
          "name": "Get Banner Detail",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:3201/banners/admin/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3201",
              "path": ["banners", "admin", "1"]
            }
          }
        },
        {
          "name": "Update Banner",
          "request": {
            "method": "PUT",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "image",
                  "type": "file",
                  "src": [],
                  "disabled": true
                },
                {
                  "key": "name",
                  "value": "Updated Banner Name",
                  "type": "text"
                },
                {
                  "key": "link_url",
                  "value": "/products/new-arrivals",
                  "type": "text"
                },
                {
                  "key": "link_target",
                  "value": "_blank",
                  "type": "text"
                },
                {
                  "key": "position",
                  "value": "2",
                  "type": "text"
                },
                {
                  "key": "sort_order",
                  "value": "5",
                  "type": "text"
                },
                {
                  "key": "is_active",
                  "value": "true",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "http://localhost:3201/banners/admin/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3201",
              "path": ["banners", "admin", "1"]
            }
          }
        },
        {
          "name": "Toggle Banner Active Status",
          "request": {
            "method": "PUT",
            "header": [],
            "url": {
              "raw": "http://localhost:3201/banners/admin/1/toggle-active",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3201",
              "path": ["banners", "admin", "1", "toggle-active"]
            }
          }
        },
        {
          "name": "Delete Banner",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "http://localhost:3201/banners/admin/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3201",
              "path": ["banners", "admin", "1"]
            }
          }
        }
      ]
    }
