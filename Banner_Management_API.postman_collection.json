      "name": "Public APIs",
      "item": [
        {
          "name": "Get All Active Banners",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:3201/banners",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3201",
              "path": ["banners"]
            }
          }
        },
        {
          "name": "Get Banners by Position",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:3201/banners/position/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3201",
              "path": ["banners", "position", "1"]
