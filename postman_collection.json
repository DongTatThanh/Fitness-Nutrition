{
  "info": {
    "name": "Fitness-Nutrition - API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0",
    "_postman_id": "fitness-nutrition-collection"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3200"
    },
    {
      "key": "access_token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "GET /",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/",
          "host": [
            "{{base_url}}"
          ],
          "path": [""]
        }
      }
    },
    {
      "name": "POST /auth/register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"new@example.com\",\n  \"password\": \"secret123\",\n  \"full_name\": \"Nguyen Van A\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/register",
          "host": ["{{base_url}}"],
          "path": ["auth","register"]
        }
      }
    },
    {
      "name": "POST /auth/login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"new@example.com\",\n  \"password\": \"secret123\"\n}"
        },
        "url": { "raw": "{{base_url}}/auth/login", "host": ["{{base_url}}"], "path": ["auth","login"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "// Save access_token to collection variable",
              "if (pm.response.code === 201 || pm.response.code === 200) {",
              "  try {",
              "    var body = pm.response.json();",
              "    if (body.access_token) pm.collectionVariables.set('access_token', body.access_token);",
              "  } catch (e) { }",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "GET /auth/me",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": { "raw": "{{base_url}}/auth/me", "host": ["{{base_url}}"], "path": ["auth","me"] }
      }
    },
    {
      "name": "POST /auth/forgot-password",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"email\": \"new@example.com\"\n}" },
        "url": { "raw": "{{base_url}}/auth/forgot-password", "host": ["{{base_url}}"], "path": ["auth","forgot-password"] }
      }
    },
    {
      "name": "POST /auth/reset-password",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"token\": \"<paste-token>\",\n  \"newPassword\": \"newpass123\"\n}" },
        "url": { "raw": "{{base_url}}/auth/reset-password", "host": ["{{base_url}}"], "path": ["auth","reset-password"] }
      }
    },
    {
      "name": "GET /products",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{base_url}}/products", "host": ["{{base_url}}"], "path": ["products"] }
      }
    }
  ]
}
